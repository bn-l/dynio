{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/GeneralSettings",
  "definitions": {
    "GeneralSettings": {
      "type": "object",
      "properties": {
        "darkMode": {
          "type": "boolean",
          "default": false
        },
        "defaultCommand": {
          "type": "string",
          "description": "Defaults to whichever has hotkey number 1 (or if no hotkeys, the first one it finds)"
        },
        "firstLaunch": {
          "type": "boolean"
        },
        "startMinimised": {
          "type": "boolean",
          "description": "Whether to start hidden or not.",
          "default": false
        },
        "inputFontSize": {
          "type": "number",
          "description": "Size of input font in rem.",
          "default": 1.8
        }
      },
      "additionalProperties": false
    }
  }
}